<% include ../partials/header.ejs %>
<link rel="stylesheet" href="/stylesheets/user/show.css">
<div class="card" id="firstCard">
  <div class="card-header" >
    <p id="shoptitle"><%=shopname.username%> Pharmacy</p>
  </div>
  <div class="card-body" >

  <div class="row">
    <div class="col-md-5">
      <img src="<%=shopname.image%>" id="mainimg" alt="" >
      <h5 class="d-inline" style="float:left;">Location: <%= shopname.location %></h5>

    </div>
    <div class="col-md-6" id="div-buttons">
      <a href="/home" class="btn btn-primary"><i class="fas fa-home"></i> Home Page</a>
      <% if(currentUser.isAdmin === true){%>
        <a href="/<%=shopname.username%>/addmedicine" class="btn btn-primary"><i class="fas fa-plus"></i> Add medicine</a>
        <%}%>

    </div>
  </div>
</div>
</div>

<div class="d-flex flex column justify-content-start" >
  
  <div class="row">
  <%shopname.medicine.forEach(function(medicine){%>
      <div class="col-md-3">
        <div class="" style=" padding: 10px 10px;">
            
            <div class="card removebutton" style="width: 18rem;">
                <img class="card-img-top" src="<%=medicine.id.image%>" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title"><%=medicine.id.name%></h5>
                  <p>Availability: <%= medicine.number %></p>
                </div>
                <form method="post" action="/<%=currentUser.username%>/remove">
                  <input type="text" name="medRemove" value="<%=medicine.id._id%>" class="d-none">
                  <div id="buttonRemove">
                    
                    <button class="btn btn-danger">Remove</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
            <%});%>
        </div>
      </div>


<!-- <script type="text/javascript" src="/js/user/show.js"></script> -->
<% include ../partials/footer.ejs %>
