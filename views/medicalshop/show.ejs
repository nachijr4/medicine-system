<% include ../partials/header.ejs %>

<link rel="stylesheet" href="/stylesheets/medicalshop/show.css">
<div class="row">
  <div class="col-sm-6">
    <div class="">
      <img id="shopimg" src="<%=shopname.image%>" alt="" style="float:left; height: 350px; width: 500">
        <h5 class="d-inline" style="float:left;">Location: <%= shopname.location %></h5>
        <!-- <a href="/home" class="btn btn-primary">Home Page</a> -->
        <% if(currentUser.isAdmin === true){%>
        <a href="/<%=shopname.username%>/addmedicine" class="btn btn-primary">Add medicine</a>
        <%}%>
    </div>
  </div>
</div>
  <div class="d-flex flex column justify-content-start" >
    <div class="row">
    <%shopname.medicine.forEach(function(medicine){%>
    <div class="hover" style=" padding: 10px 10px;">
        <div class="col-md-4">
    <div class="card" style="width: 18rem;">
      <form action="/home/<%=shopname.username%>/<%=medicine.id._id%>" method="post">
          <img class="card-img-top" src="<%=medicine.id.image%>" alt="Card image cap">
          <div class="card-body">
          <h5 class="card-title"><%=medicine.id.name%></h5>
          <div class="card-text">
            <!-- <p  id="description"><%=medicine.id.description%></p> -->
          </div>
          <p>Availability: <%= medicine.number %></p>
          <div >
            <label for="required">Required:</label>
          <input type="number" id="required" name="count" value="" style="width:40px;" max="<%=medicine.number%>" min=0>
        </div>
          <button class="btn btn-primary"><i class="fas fa-plus"></i> Add To Cart</button>
          </div>
        </form>
    </div>
  </div>
</div>
    <%});%>
  </div>
</div>


<% include ../partials/footer.ejs %>
